{
  "name": "serverless-graphql-apollo",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:serverless/serverless-graphql-apollo.git"
  },
  "scripts": {
    "start": "nodemon ./server.js --ignore app --exec babel-node",
    "start-offline": "serverless offline start",
    "build:node_modules": "npm install && cd ../../app-client && npm install && cd .. && cd foundation/app-server",
    "deploy": "npm run build:node_modules && export SLS_DEBUG=* && serverless --stage=production deploy",
    "lint": "npm run lint:eslint && npm run lint:css",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:css": "stylelint ./app/**/*.css",
    "lint:staged": "lint-staged",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom 'app/**/*.js' --collectCoverageFrom 'graphql/**/*.js'"
  },
  "lint-staged": {
    "lint:eslint": "*.js",
    "stylelint": "*.css"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "graphql-tools": "^1.0.0",
    "apollo-server-lambda": "1.1.2",
    "apollo-server-module-graphiql": "^1.1.2"
  },
  "devDependencies": {
    "apollo-server-express": "^1.0.2",
    "aws-sdk": "^2.4.8",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "body-parser": "^1.15.2",
    "cors": "2.8.4",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-flowtype": "^2.11.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.2.0",
    "express": "^4.15.0",
    "graphql": "^0.10.0",
    "jest-cli": "^19.0.0",
    "lint-staged": "^3.0.3",
    "nodemon": "^1.10.0",
    "postcss-cssnext": "^2.6.0",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^3.0.0",
    "serverless-offline": "^3.15.3",
    "webpack": "^2.2.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|png|gif|eot|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/foundation/jest/fileMock.js",
      "^.+\\.css$": "<rootDir>/foundation/jest/cssMock.js"
    }
  }
}
